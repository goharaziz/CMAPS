<div class="container">
    <div class="table-wrapper">
        <div class="row">
            <div class="col-sm-8">
                <h1 style="text-align: justify;">All <b>Users</b></h1>
            </div>
            <div class="col-sm-4">
                <a class="btn btn-success" href="/admin/register">
                    <i class="fa fa-plus-circle" aria-hidden="true">Add New User</i>
                </a>
            </div>

        </div>
      
    <table class="table table-striped table-hover table table-bordered table-sm">
    <thead class="bg-dark text-center">
        <tr class="text-white">
            <th>FirstName</th>
            <th>LastName</th>
            <th>Email</th>
            <th>Password</th>
            <th>Actions</th>
        </tr>
    </thead> 
    <tbody class="text-center">
        {{#each users}}
            <tr>
                <td>{{this.firstName}}</td>
                <td>{{this.lastName}}</td>
                <td>{{this.email}}</td>
                <td>{{this.password}}</td>
                <td>
                    <form onsubmit="confirm("Are you sure you want to delete")" class="delete-form" action="/admin/users/delete/{{id}}?newMethod=DELETE" method="POST">                            
                        <button type="button" class="btn btn-sm btn-danger mb-2" data-toggle="modal" data-target="#exampleModal">
                            <i class="fa fa-trash" aria-hidden="true"></i>Delete                        </button>
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No, cancel</button>
                                    <button type="submit" class="btn btn-danger">Yes, delete</button>
                                </div>
                                </div>
                            </div>
                        </div>
                        <a href="/Admin/users/update/{{this._id}}" class="btn btn-sm btn-warning mr-2">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>Edit
                        </a>
                    </form>                                            
                </td>
            </tr>
        {{/each}}
        
    </tbody>
    </table>
</div>
    
</div>
