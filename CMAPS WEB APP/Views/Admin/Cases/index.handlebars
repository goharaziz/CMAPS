{{#if message}}
{{#each message}}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>{{msg}}</strong>
    </div>
{{/each}}
{{/if}}

<div class="container">
    <div class="table-wrapper">
        <div class="row">
            <div class="col-sm-8">
                <h1 style="text-align: justify;">All <b>Cases</b></h1>
            </div>
            <div class="col-sm-4">
                <a href="/Admin/Cases/create" class="btn btn-success" >
                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                    <span>Add New Case</span>
                </a>

                <a href="/Admin/Cases/exporttocsv" class="btn btn-success" >
                    <i class="fa fa-share-alt-square" aria-hidden="true"></i>
                    <span>Export to CSV</span>
                </a>
            </div>
        </div>
   
   
    <table class="table table-striped table-hover table table-bordered table-sm">
    <thead class="bg-dark text-center">
        <tr class="text-white">
            <th>Posting</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Date Day and Time</th>
            <th>Offence</th>
            <th>Offence Category</th>
            <th>PartOfTheDay</th>
            <th>Actions</th>
        </tr>
    </thead> 
    <tbody class="text-center">
        {{#each list}}
            <tr>
                <td>{{this.Posting}}</td>
                <td>{{this.Latitudes}}</td>
                <td>{{this.Longitudes}}</td>
                <td>{{this.Date}}/{{this.Month}}/{{this.Year}}  {{this.Day}} {{this.Time}}</td>
                <td>{{this.Offences}}</td>
                <td>{{this.OffenceCategory}}</td>
                <td>{{this.PartOfTheDay}}</td>
                <td class="d-flex">
                    <a href="/Admin/Cases/edit/{{this._id}}" class="btn btn-sm btn-warning mr-2">
                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>Edit
                    </a>    
                    <form onsubmit="confirm("Are you sure you want to delete")" class="delete-form" action="/admin/cases/delete/{{id}}?newMethod=DELETE" method="POST">                            
                        <button type="button" class="btn btn-sm btn-danger mb-2" data-toggle="modal" data-target="#exampleModal">Delete</button>

                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Confirm Delete</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Are you sure?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">No, cancel</button>
                                    <button type="submit" class="btn btn-danger">Yes, delete</button>
                                </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        {{/each}}
         
    </tbody>
    </table>
</div>
    
</div>
