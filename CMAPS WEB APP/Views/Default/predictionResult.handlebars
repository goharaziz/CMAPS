<div class="row" id="main_div_index" style="background-image: url(./security1.jpg); background-repeat: no-repeat; background-size: cover; background-position: center; background-attachment: fixed;">
    
    <div class="col-md-8">
            
        <div class="jumbotron" style="margin-top: 50px;">
            <img src="./logo.jpg" alt="logo" style="width: 30%; height: 10%; float:right;">
            <h1 class="display-3">CMAPS</h1>
            
            <p class="lead"><small>Crime Mapping Analysis and Prediction System</small></p>
            <p class="text-info">The Complete Security System</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-10">
            <div class="card card-register mx-auto my-5">                        
                <form class="row" action="/prediction" method="POST" autocomplete="off" style="padding: 10px;">

                    <div class="form-group-sm col-sm-12" style="margin-top: 5px;">
                        <label for="posting">Posting</label>
                        <select name="posting" id="posting" class="form-control" required>
                            <option value="{{queryObj.posting}}">{{queryObj.posting}}</option>
                        </select>
                    </div>
                                    
                    <div class="form-group-sm col-sm-4" style="margin-top: 5px;">
                        <label for="date">Date</label>
                        <input type="number" min="1" max="31" class="form-control" id="date" name="date" placeholder="dd" value="{{queryObj.date}}" required>
                    </div>

                    <div class="form-group-sm col-sm-4" style="margin-top: 5px;">
                        <label for="month">Month</label>
                        <input type="number" min="1" max="12" class="form-control" id="month" name="month" placeholder="mm" value="{{queryObj.month}}" required>
                    </div>

                    <div class="form-group-sm col-sm-4" style="margin-top: 5px;">
                        <label for="year">Year</label>
                        <input type="number" min="2000" max="9999" class="form-control" id="year" name="year" placeholder="yyyy" value="{{queryObj.year}}" required>
                    </div>

                    <div class="form-group-sm col-sm-6" style="margin-top: 5px;">
                        <label for="day">Day</label>
                        <select name="day" id="day" class="form-control" required>
                            <option value="{{queryObj.day}}">Monday</option>
                        </select>
                    </div>                


                    <div class="form-group-sm col-sm-12" style="margin-top: 5px;">
                        <label for="time"><strong>Time</strong></label>
                        <hr>
                        <span class="badge badge-pill badge-info">Choose Hour and Minutes for the time you want to Predict</span>
                        <span class="badge badge-pill badge-info">For AM Hours will be 1-12 / For PM Hours will be 13-24</span>
                    </div>
                    <div class="form-group-sm col-sm-6" style="margin-top: 5px;">
                        <label for="hours">Hours</label>
                        <input type="number" class="form-control" id="hours" name="hours" placeholder="Enter The Time of crime" value="{{queryObj.hours}}" required>
                    </div>

                    <div class="form-group-sm col-sm-6" style="margin-top: 5px;">
                        <label for="minutes">Minutes</label>
                        <input type="number" class="form-control" id="minutes" name="minutes" placeholder="Enter The Time of crime" value="{{queryObj.minutes}}" required>
                    </div>                

                    <div class="form-group-sm col-md-12" style="margin-top: 5px;">
                        <label for="partOfTheDay">Part of the Day</label>
                        <small id="emailHelp" class="form-text text-muted">
                            Select  <span class="badge badge-pill badge-info">1 for 12AM-4AM</span> ,
                                    <span class="badge badge-pill badge-info">2 for 4AM-8AM</span>,
                                    <span class="badge badge-pill badge-info">3 for 8AM-12PM</span>,
                                    <span class="badge badge-pill badge-info">4 for 12PM-4PM</span>,
                                    <span class="badge badge-pill badge-info">4 for 4PM-8PM</span>,
                                    <span class="badge badge-pill badge-info">4 for 8PM-12AM</span>.
                        </small>
                        <select name="partOfTheDay" id="partOfTheDay" class="form-control" required>
                            <option value="{{queryObj.partOfTheDay}}">1</option>
                        </select>
                    </div>

                    <div class="col-md-12" style="margin-top: 5px;">
                        <button class="btn btn-outline-success btn-sm" id="submit" type="submit" style="margin-top: 5px;">
                            <i class="fa fa-database" aria-hidden="true">Predict</i>
                        </button>
                        <span>{{finalresponse}}</span>            
                        
                    </div>
                    
                </form>
            </div>
        </div>
    </div>


</div>
<!-- /.row -->
